            .grid-container {
                display: grid;
                grid-template-columns: 730px auto;
                background-color: #2196F3;
                padding: 10px;
            }

            .grid-item {
                background-color: rgba(255, 255, 255, 0.8);
                border: 1px solid #2196F3;
                padding: 20px;
            }

          .board {
                width: 680px;
                height: 480px;
                position: relative;
                background-color: lightgrey;
                box-sizing: border-box;
                border: 10px solid brown;
                border-radius: 10px;
                margin: 0px;
                padding: 0px;
          }

          .left-bin {
                position: relative;
                left: 15px;
                top: 0px;
          }

          .right-bin {
                position: relative;
                left: 330px;
                top: -390px;
          }

          .left-bin .bottom-row {
                clear: left;
          }

          .right-bin .top-row {
                clear: left;
          }

          .right-bin .bottom-row {
                clear: left;
          }

          .bottom-row {
                position: relative;
                top: 70px
          }

          .arrow-down {
                width: 0px;
                height: 0px;
                border-top: 195px solid green;
                border-bottom: 0px solid;
                border-left: 20px solid transparent;
                border-right: 20px solid transparent;
                display: inline;
                float: left;
          }

          .arrow-up {
                width: 0px;
                height: 0px;
                border-top: 0px solid;
                border-bottom: 195px solid green;
                border-left: 20px solid transparent;
                border-right: 20px solid transparent ;
                display: inline;
                float: left;
          }


          .arrow-up.odd {
                border-bottom: 195px solid #044;
          }

          .arrow-down.even {
                border-top: 195px solid #044;
          }

          .middle-bar {
                width: 20px;
                height: 450px;
                padding: 5px;
                background-color: brown;
                position: absolute;
                left: 280px;
                top: 0px;
          }

          .right-bar {
                width: 40px;
                height: 450px;
                padding: 5px;
                background-color: brown;
                position: absolute;
                left: 610px;
                top: 0px;
          }

          .dice-block {
                width: 680px;
                height: 50px;
                padding: 5px;
                position: absolute;
                left: 0px;
                top: 490px;
                text-align: left;
                font-size: 3em;
          }

          .piece {
                width: 36px;
                height: 36px;
                background-color: black;
                position: absolute;
                top: 152px;
                left: 17px;
                z-value: 1;
                border-radius: 18px;
                opacity: 1.0;
                border: 1px solid black;
                text-align: center;
                line-height: 36px;
          }
